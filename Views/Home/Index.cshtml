@{
    ViewData["Title"] = "Home Page";

}
@model dynamic

<body id="cuerpo">
    <div id="barraLateral" class="sidebar container-fluid">
        <h2>Suscripciones</h2>
        <ul class="pt-2">
            @foreach (var sus in Model.Suscripciones)
            {
                <a href="@Url.Action("Index", "Creador", new { username = sus.UserName })">
                <li class="pt-4">

                        @if (sus.ImagePerfil != null)
                        {
                        <img src="@Url.Action("File", "Home", new { id = sus.ImagePerfil })" style="width: 40px; height: 30px;" />
                        }
                        else
                        {
                        <img src="~/img/No imagen.jpg" alt="Imagen de Perfil" class="img-thumbnail rounded-circle mb-3" style="width: 40px; height: 30px;">
                        }


                    <p class="profile-name">@sus.UserName</p>
                </li>
                </a>
            }
        </ul>
    </div>

    <div id="intro">
        <h1 class="row-cols-12">Apoya tu pasión</h1>
        <h3 class="row-cols-4">Impulsa tu creatividad</h3>
        <h3 class="row-cols-4">¡Únete a nuestra comunidad!</h3>
    </div>

    <div id="intro" class="image-container">
        <img id="index" src="~/img/menu.png" alt="index" />
    </div>
    
    <div id="intro2">
        <h1>¡Aquí te mostramos un poco sobre nuestras estrellas!</h1>
        <h2>Talent Trade está diseñado para cualquier persona con una audiencia establecida o emergente</h2>
        <h2>para todos aquellos que producen contenido atractivo de manera regular.</h2>
    </div>

    <div id="carrusel" class="container-fluid">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="arrowL" onclick="navigate(-1)">&#9664;</div>
            <div class="profiles">
                @foreach (var creador in Model.Creadores)
                {

                    <a href="@Url.Action("Index", "Creador", new { username = creador.UserName })">
                        <div class="profile">
                            <div class="circle">
                                @if (creador.ImagePerfil != null)
                                {
                                    <img src="@Url.Action("File", "Home", new { id = creador.ImagePerfil })" alt="Imagen de Perfil" />
                                }else
                                {
                                    <img src="~/img/No imagen.jpg" alt="Imagen de Perfil" class="img-thumbnail rounded-circle mb-3" style="width: 150px; height: 150px;">
                                }
                                
                            </div>
                            <div class="profile-name">@creador.UserName</div>
                        </div>
                    </a>
                }
                
            </div>
            <div class="arrowR" onclick="navigate(1)">&#9654;</div>
        </div>
    </div>
</body>
