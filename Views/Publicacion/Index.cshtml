@{
    ViewData["Title"] = "Detalles de la publicación";
}

@model dynamic

@if (Model != null)
{
    <h1 id="intro5">Detalles de la Publicación</h1>

    <div class="container" style="background-color:#1A1E23">
        <button type="button" class="corner-button btn-primary" data-bs-toggle="modal" data-bs-target="#editarPublicacion">
            <svg width="30" height="30">
                <path d="M3 12c0-1.1.9-2 2-2s2 .9 2 2-.9 2-2 2-2-.9-2-2zm9 2c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm7 0c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z" fill="white" />
            </svg>
        </button>

        @if (Model.Publicacion.Adjuntos != null)
        {
            <div class="post-content-container">
                <div class="post-image-container pb-5">
                    @foreach (var adjunto in Model.Publicacion.Adjuntos)
                    {
                        <div class="image-container">
                            <img src="@Url.Action("File", "Home", new { id = adjunto })" class="product-image" alt="Producto">
                            <button type="button" class="btn btn-danger btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#eliminarImagenModal"
                                    data-id-publicacion="@Model.Publicacion.Id" data-id-imagen="@adjunto">
                                Eliminar
                            </button>
                        </div>
                    }
                </div>
                <h1 class="post-title">@Model.Publicacion.Titulo</h1>
                <p class="post-date">@Model.Publicacion.Fecha.ToString("dd/MM/yyyy")</p>
                <p class="post-content">@Model.Publicacion.Contenido</p>
            </div>
        }
        else
        {
            <div class="alert alert-danger text-center" role="alert">
                <h1 id="error">Error 404: Página no encontrada</h1>
                <p>La página que estás buscando no existe.</p>
            </div>
        }
    </div>

    <!-- Modal: Editar Publicación -->
    <div class="modal fade" id="editarPublicacion" tabindex="-1" aria-labelledby="editarPublicacionLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarPublicacionLabel">Editar Publicación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="EditarPublicacion" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Publicacion.Id" />
                        <div class="form-group">
                            <label for="titulo">Título</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" value="@Model.Publicacion.Titulo" required />
                        </div>
                        <div class="form-group">
                            <label for="contenido">Contenido</label>
                            <textarea class="form-control" id="contenido" name="contenido" rows="3" required>@Model.Publicacion.Contenido</textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Agregar Imágenes -->
    <div class="modal fade" id="agregarImagenesModal" tabindex="-1" aria-labelledby="agregarImagenesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="agregarImagenesModalLabel">Agregar Imágenes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="AgregarImagenesPublicacion" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Publicacion.Id" />
                        <div class="form-group">
                            <label for="imagenes">Seleccionar Imágenes</label>
                            <input type="file" class="form-control" id="imagenes" name="imagenes" multiple required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Agregar Imágenes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Eliminar Imagen -->
    <div class="modal fade" id="eliminarImagenModal" tabindex="-1" aria-labelledby="eliminarImagenModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarImagenModalLabel">Eliminar Imagen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="EliminarImagenPublicacion" method="post">
                    <div class="modal-body">
                        <input type="hidden" id="idPublicacionEliminarImagen" name="idPublicacion" />
                        <input type="hidden" id="idImagenEliminar" name="idImagen" />
                        <p>¿Estás seguro de que deseas eliminar esta imagen?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Eliminar Publicación -->
    <div class="modal fade" id="eliminarPublicacionModal" tabindex="-1" aria-labelledby="eliminarPublicacionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarPublicacionModalLabel">Eliminar Publicación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="EliminarPublicacion" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Publicacion.Id" />
                        <p>¿Estás seguro de que deseas eliminar esta publicación?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}