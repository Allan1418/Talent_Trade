@{
    ViewData["Title"] = "Detalles de la publicación";
}
@model dynamic

@if (Model != null)
{
    <h1 id="intro5" class="text-center text-white mb-4">Detalles de la Publicación</h1>

    <div class="container" style="display: flex; flex-wrap: wrap; align-items: stretch;">
        <div class="image-section" style="flex: 2; padding: 10px;">
            @if (Model.Publicacion.Adjuntos != null && Model.Publicacion.Adjuntos.Count > 0)
            {
                <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @for (var i = 0; i < Model.Publicacion.Adjuntos.Count; i++)
                        {
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                    aria-current="@(i == 0 ? "true" : "")" aria-label="Slide @i"></button>
                        }
                    </div>

                    <div class="carousel-inner">
                        @for (var i = 0; i < Model.Publicacion.Adjuntos.Count; i++)
                        {
                            var adjunto = Model.Publicacion.Adjuntos[i];
                            <div class="carousel-item @(i == 0 ? "active" : "") position-relative">
                                <img src="@Url.Action("File", "Home", new { id = adjunto })" class="d-block w-100" alt="Imagen de publicación" style="max-height: 500px; object-fit: contain;" />

                                @if (Model.EsPropietario)
                                {
                                    <form asp-controller="Publicacion" asp-action="EliminarImagenPublicacion" method="post" class="position-absolute top-0 end-0 m-2">
                                        <input type="hidden" name="idPublicacion" value="@Model.Publicacion.Id" />
                                        <input type="hidden" name="idImagen" value="@adjunto" />
                                        <button id="modalesPublicacion" type="submit" class="btn btn-sm btn-danger">Eliminar Imagen</button>
                                    </form>
                                }
                            </div>
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>
            }
            else
            {
                <p class=" pt-5 fs-3 text-center">No hay imágenes asociadas a esta publicación.</p>
            }
        </div>

        <div class="details-section" style="flex: 1; background-color: #1A1E23; color: white; padding: 20px; border-radius: 10px; margin-left: 10px;">
            <h2>@Model.Publicacion.Titulo</h2>
            <p class="text-muted">Publicado el: @Model.Publicacion.Fecha.ToString("dd/MM/yyyy")</p>
            <span id="contenidoTexto">@Model.Publicacion.Contenido</span>

            @if (Model.EsPropietario)
            {
                <div class="d-flex col-12 gap-2 mt-3">
                    <button id="modalesPublicacion" type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editarPublicacionModal">
                        Editar Publicación
                    </button>

                    <button id="modalesPublicacion" type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#agregarImagenesModal">
                        Agregar Imágenes
                    </button>

                    <form asp-controller="Publicacion" asp-action="EliminarPublicacion" method="post">
                        <input type="hidden" name="id" value="@Model.Publicacion.Id" />
                        <button id="modalesPublicacion" type="submit" class="btn btn-danger">Eliminar Publicación</button>
                    </form>
                </div>
            }
        </div>
    </div>

    <div class="comments-section mt-4 mx-auto" style="max-width: 800px; background-color: #1A1E23; color: white; padding: 20px; border-radius: 10px;">
        <h3>Comentarios</h3>

        <div class="comment-list mt-3">
            @if (Model.Publicacion.TieneAcceso)
            {
                @foreach (var comentario in Model.Publicacion.Comentarios)
                {
                    <div class="comment-item mb-3 p-3" style="background-color: #2C3136; border-radius: 8px;">
                        <div class="d-flex justify-content-between align-items-center mb-2">

                            <strong>@comentario.UserName</strong>
                        </div>
                        <small class="text-muted">@comentario.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <p>@comentario.Texto</p>

                    @* Mostrar respuestas (si las hay) *@
                    @if (comentario.Respuestas != null && comentario.Respuestas.Count > 0)
                    {
                        <div class="replies mt-2">
                            @foreach (var respuesta in comentario.Respuestas)
                            {
                                <div class="reply mb-2 p-2" style="background-color: #3D4247; border-radius: 8px;">
                                    <div class="d-flex align-items-center mb-1">
                                        <strong class="me-2">@respuesta.UserName</strong>
                                        <small class="text-muted">@respuesta.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p>@respuesta.Texto</p>
                                </div>
                            }
                        </div>
                    }

                    <div class="d-flex gap-2 mt-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Publicacion" asp-action="EliminarComentario" method="post">
                                <input type="hidden" name="idComentario" value="@comentario.Id" />
                                <input type="hidden" name="idPublicacion" value="@Model.Publicacion.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editarComentarioModal" onclick="editarComentario('@comentario.Id', '@comentario.Texto')">Editar</button>

                            @* Formulario para agregar una respuesta *@
                            <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#responderComentario_@comentario.Id" aria-expanded="false" aria-controls="responderComentario_@comentario.Id">
                                Responder
                            </button>
                            <div class="collapse" id="responderComentario_@comentario.Id">
                                <div class="card card-body p-2">
                                    <form asp-controller="Publicacion" asp-action="CrearRespuesta" method="post">
                                        <input type="hidden" name="idPublicacion" value="@Model.Publicacion.Id" />
                                        <input type="hidden" name="idComentario" value="@comentario.Id" />
                                        <div class="mb-2">
                                            <textarea class="form-control form-control-sm" name="texto" rows="2" placeholder="Escribe tu respuesta..." required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary">Responder</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="add-comment mt-4">
                <h5>Agregar un comentario</h5>
                <form asp-controller="Publicacion" asp-action="CrearComentario" method="post">
                    <input type="hidden" name="idPublicacion" value="@Model.Publicacion.Id" />
                    <div class="mb-3">
                        <textarea class="form-control" name="texto" rows="3" placeholder="Escribe tu comentario..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Comentar</button>
                </form>
            </div>
        }
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="add-comment mt-4">
            <h5>Agregar un comentario</h5>
            <form asp-controller="Publicacion" asp-action="CrearComentario" method="post">
                <input type="hidden" name="idPublicacion" value="@Model.Publicacion.Id" />
                <div class="mb-3">
                    <textarea class="form-control" name="texto" rows="3" placeholder="Escribe tu comentario..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Comentar</button>
            </form>
        </div>
    }
                        </div>

    <div class="modal fade" id="editarComentarioModal" tabindex="-1" aria-labelledby="editarComentarioLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="editarComentarioLabel">Editar Comentario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <form asp-controller="Publicacion" asp-action="EditarComentario" method="post">
                    <input type="hidden" name="idPublicacion" value="@Model.Publicacion.Id" />
                    <input type="hidden" name="idComentario" id="idComentarioEditar" value="" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="contenidoComentario" class="form-label">Contenido del Comentario</label>
                            <textarea class="form-control" id="contenidoComentario" name="texto" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function editarComentario(idComentario, textoComentario) {
            document.getElementById('idComentarioEditar').value = idComentario;
            document.getElementById('contenidoComentario').value = textoComentario;
        }
    </script>

    <div class="modal fade" id="editarPublicacionModal" tabindex="-1" aria-labelledby="editarPublicacionLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="editarPublicacionLabel">Editar Publicación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <form asp-controller="Publicacion" asp-action="EditarPublicacion" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Publicacion.Id" />
                        <div class="mb-3">
                            <label for="titulo" class="form-label">Título</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" value="@Model.Publicacion.Titulo" required />
                        </div>
                        <div class="mb-3">
                            <label for="contenido" class="form-label">Contenido</label>
                            <textarea class="form-control" id="contenido" name="contenido" rows="4" required>@Model.Publicacion.Contenido</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="idNivelSuscripcion" class="form-label">Nivel de Suscripción</label>
                            <select class="form-select" id="idNivelSuscripcion" name="idNivelSuscripcion">
                                <option value="">Gratuito</option>
                                @foreach (var nivel in Model.Niveles)
                                {
                                    if (Model.Publicacion.IdNivelSuscripcion != null && Model.Publicacion.IdNivelSuscripcion == nivel.Id)
                                    {
                                        <option value="@nivel.Id" selected>@nivel.Nombre</option>
                                    }
                                    else
                                    {
                                        <option value="@nivel.Id">@nivel.Nombre</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="agregarImagenesModal" tabindex="-1" aria-labelledby="agregarImagenesLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="agregarImagenesLabel">Agregar Imágenes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <form asp-controller="Publicacion" asp-action="AgregarImagenesPublicacion" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Publicacion.Id" />
                        <div class="mb-3">
                            <label for="imagenes" class="form-label">Seleccionar imágenes</label>
                            <input type="file" class="form-control" id="imagenes" name="imagenes" multiple required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Subir Imágenes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-center">
        <h1>Error 404</h1>
        <p>La publicación que estás buscando no existe.</p>
    </div>
}