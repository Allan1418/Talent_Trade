@{
    ViewData["Title"] = "Creador";
}
@model dynamic

@if (Model != null)
{
    <body id="cuerpo">

        <div style="width: 100%; height: 250px; overflow: hidden;">
            <img src="@Url.Action("File", "Home", new { id = Model.Creador.ImageBackground })"
                 alt="Responsive image"
                 style="width: 100%; height: auto; object-fit: cover;">
        </div>
        <div id="publiTitulo">
            <img src="https://www.solbyte.com/blog/wp-content/uploads/iot.jpg"
                 alt="Creador" class="profile-image">
            @if (Model.EsPropietario)
            {
                <div class="pt-3 d-flex justify-content-center">
                    <button id="modifyDataButton" class="subscribe-button text-center"
                            data-bs-toggle="modal" data-bs-target="#modal">
                        Modificar Datos
                    </button>
                    <script src="~/js/site.js"></script>
                </div>
            }
            <h1 class="pt-2">@Model.Creador.nombrePagina</h1>
            <p id="shortDes" class="fs-5">@Model.Creador.ShortDescripcion</p>
        </div>

        <div id="mebresias" class="row container-fluid text-center">

            @if (Model != null && Model.EsPropietario)
            {
                <div class="pt-3 d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#membershipModal">
                        Crear/Editar Membresía
                    </button>

                    <script src="~/js/site.js"></script>
                </div>
            }

            <div class="col-md-4">
                <div class="card">
                    <h4 class="pt-5">Nivel 1</h4>
                    <p class="pt-5">Descripción del nivel 1.</p>
                    <button class="subscribe-button mt-5">Suscribirse</button>
                </div>
            </div>
        </div>

        <div class="nav nav-tabs container" id="myTab" role="tablist">
            <button class="nav-link active" id="publicaciones-tab" data-bs-toggle="tab" data-bs-target="#publicaciones"
                    type="button" role="tab" aria-controls="publicaciones" aria-selected="true">
                Publicaciones
            </button>
            <button class="nav-link" id="acercaDe-tab" data-bs-toggle="tab" data-bs-target="#acercaDe"
                    type="button" role="tab" aria-controls="acercaDe" aria-selected="false">
                Acerca de
            </button>
        </div>

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade" id="acercaDe" role="tabpanel" aria-labelledby="acercaDe-tab">
                <div id="publiTitulo" class="mb-5">
                    <div>
                        <h1> Acerca de</h1>
                        <p id="acercaDe" class="fs-5">@Model.Creador.AcercaDe</p>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade show active" id="publicaciones" role="tabpanel" aria-labelledby="publicaciones-tab">
                <h2 id="publiTitulo" class="mb-5 mt-5">Contenido Exclusivo</h2>
                <div class="container">
                    <div>
                        <div id="cuerpoContenido" class="row">
                            <div id="contenido" class="col-md-6 offset-md-3 pt-5 pb-5">
                                <div style="background-color:#19191A" class="product-card">
                                    <img src="https://www.solbyte.com/blog/wp-content/uploads/iot.jpg" class="product-image" alt="Producto">
                                    <a href="@Url.Action("Index", "Publicacion")">
                                        <h2>Titulo de la publicacion</h2>
                                    </a>
                                    <p>Bundle of 6 excel sheets for 3 phase power calculators.</p>
                                    <p>
                                        <a href="" class="btn btn-primary">Suscribete</a>
                                    </p>
                                    <p><strong>$3</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div id="modal" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modificar Datos</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="modifyDataForm" asp-controller="Creador" asp-action="EditarCreador" method="post" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label for="nombrePagina" class="form-label">Nombre de la Página</label>
                                <textarea type="text" class="form-control" id="nombrePagina" name="nombrePagina" required>@Model.Creador.nombrePagina</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="shortDescripcion" class="form-label">Descripción Corta</label>
                                <textarea class="form-control" id="shortDescripcion" name="shortDescripcion" rows="3">@Model.Creador.ShortDescripcion</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="acercaDe" class="form-label">Acerca De</label>
                                <textarea class="form-control" id="AcercaDe" name="acercaDe" rows="3">@Model.Creador.AcercaDe</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="nuevaImagen" class="form-label">Subir Imagen</label>
                                <input type="file" class="form-control" id="nuevaImagen" name="nuevaImagen">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" form="modifyDataForm" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>


        <div id="membershipModal" class="modal fade" tabindex="-1" aria-labelledby="membershipModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="membershipModalLabel">Editar Membresía</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editMembershipForm" asp-controller="" asp-action="" method="post">
                            <div class="form-group">
                                <label for="membershipSelect">Seleccionar Membresía</label>
                                <select class="form-control" id="membershipSelect" name="membershipId">
                                   <option>Nombre de las membresias</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="membershipName">Nombre de la Membresía</label>
                                <input type="text" class="form-control" id="membershipName" name="nombre" />
                            </div>
                            <div class="form-group">
                                <label for="membershipDescription">Descripción</label>
                                <textarea class="form-control" id="membershipDescription" name="descripcion"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="membershipPrice">Precio</label>
                                <input type="number" class="form-control" id="membershipPrice" name="precio" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" form="editMembershipForm" class="btn btn-primary">Guardar Cambios</button>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMembershipModal">Crear Nueva Membresía</button>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="modal fade" id="createMembershipModal" tabindex="-1" aria-labelledby="createMembershipModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createMembershipModalLabel">Crear Nueva Membresía</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="createMembershipForm" asp-controller="Memberships" asp-action="Create" method="post">
                            <div class="modal-footer">
                                <div class="form-group">
                                    <label for="membershipName">Nombre de la Membresía</label>
                                    <input type="text" class="form-control" id="membershipName" name="nombre" />
                                </div>
                                <div class="form-group">
                                    <label for="membershipDescription">Descripción</label>
                                    <textarea class="form-control" id="membershipDescription" name="descripcion"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="membershipPrice">Precio</label>
                                    <input type="number" class="form-control" id="membershipPrice" name="precio" />
                                </div>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                <button type="submit" class="btn btn-primary">Crear</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </body>
    <script src="~/js/site.js"></script>
}
else
{
    <div class="alert alert-danger text-center" role="alert">
        <h1 id="error">Error 404: Página no encontrada</h1>
        <p>La página que estás buscando no existe.</p>
    </div>
}