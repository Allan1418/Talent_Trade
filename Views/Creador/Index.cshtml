@{
    ViewData["Title"] = "Creador";

    @model Talent_Trade.Models.Creador

}
<body id="cuerpo">
    <div>
        <div style="width: 100%; height: 250px; overflow: hidden;">
            <img src="https://static3.depositphotos.com/1006649/217/i/450/depositphotos_2171033-stock-photo-network-cables-connected-to-switch.jpg"
                 alt="Responsive image"
                 style="width: 100%; height: auto; object-fit: cover;">
        </div>
        <div class="header">
            <img src="https://www.solbyte.com/blog/wp-content/uploads/iot.jpg"
                 alt="Creador" class="profile-image">
            <div class="pt-3 d-flex justify-content-center">
                <label for="modal-toggle" class="subscribe-button text-center" id="modifyDataButton">
                    Modificar Datos
                </label>
            </div>
            <h1 class="pt-2">Nombre de la pagina</h1>
            <p>Descripción breve del creador y su trabajo.</p>
        </div>

        <div id="mebresias" class="row text-center">
            <div class="col-4">
                <h2>Niveles de Membresía</h2>
                <h3>Nivel 1 - $1/mes</h3>
                <p>Acceso a contenido exclusivo y actualizaciones.</p>
                <button class="subscribe-button">Suscribirse</button>
            </div>
        </div>

        <div class="header mb-5">
            <div>
                <h3> Acerca de</h3>
                <p>Descripción.</p>
            </div>
        </div>

        <h2 class="header mb-5 mt-5">Contenido Exclusivo</h2>
        
        <div>
            <div class="container">
                <div class="post-image-container">
                    <a href="@Url.Action("Detalle", "Creador")">
                        <img src="~/img/login.png" alt="Imagen destacada" class="post-image">
                    </a>
                </div>

                <div class="post-content-container">
                    <h1 class="post-title">Título de la publicación</h1>
                    <p class="post-date">Fecha de publicación</p>
                    <p class="post-content">Contenido de la publicación</p>
                    <div class="comments">
                    </div>
                </div>
            </div>
        </div>



        <div id="modal" class="modal">
            <div class="modal-content">
                <span class="close" id="closeModal">&times;</span>
                <h2>Modificar Datos</h2>
                <form id="modifyDataForm">
                    <div class="form-group">
                        <label for="nombrePagina">Nombre de la Página:</label>
                        <input type="text" id="nombrePagina" name="nombrePagina" required>
                    </div>
                    <div class="form-group">
                        <label for="shortDescripcion">Descripción Corta:</label>
                        <textarea id="shortDescripcion" name="shortDescripcion" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="acercaDe">Acerca de:</label>
                        <textarea id="acercaDe" name="acercaDe" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="niveles">Niveles de Membresía:</label>
                        <textarea id="niveles" name="niveles" rows="3" placeholder="Ingrese niveles separados por comas"></textarea>
                    </div>
                    <button type="submit">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</body>

<script src="~/js/site.js"></script>